<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".weather.ForecastFragment">

    <LinearLayout
        android:id="@+id/linearLayout_forecast"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:textColor="@color/caquiOscuro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/clima_cinco_dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_sierraNombre_forecast"
            android:textColor="@color/caquiOscuro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Weather in Sierra Nevada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_geo_coord_forecast"
            android:textColor="@color/caquiOscuro"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="[35.42]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_forecast"
        android:layout_below="@id/linearLayout_forecast"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </android.support.v7.widget.RecyclerView>


</RelativeLayout>